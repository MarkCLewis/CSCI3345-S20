# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                             controllers.Application.index
GET        /tempPage                     controllers.Application.tempPage
GET        /temps                        controllers.Application.temps(month: Int, year: Int)
+ nocsrf
POST       /tempsPost                    controllers.Application.tempsPost
GET        /tempsPlotPage                controllers.Application.tempsPlotPage
GET        /tempsPlotPNG                 controllers.Application.tempsPlotPNG

# Prefix must match `play.assets.urlPrefix`
GET        /assets/*file                 controllers.Assets.at(file)
GET        /versionedAssets/*file        controllers.Assets.versioned(path="/public", file: Asset)
